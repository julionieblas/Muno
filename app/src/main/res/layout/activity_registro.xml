<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondoregistro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/munoiconoxxhdpi" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinslight"
            android:gravity="center"
            android:text="Hola, \n comencemos"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_nombre_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/et_correo_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Correo" />

        <EditText
            android:id="@+id/et_contra_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Contraseña" />

        <EditText
            android:id="@+id/et_contra2_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Confirmar Contraseña" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_pais"
            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:contentDescription="País"
            android:layoutAnimation="@anim/fragment_fade_enter"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/spinner_genero"
            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:visibility="visible" />

    </LinearLayout>

    <RadioButton
        android:id="@+id/radioButtonCondiciones"
        android:layout_width="273dp"
        android:layout_height="33dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Acepto los terminos y condiciones" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/btn_redondo_azul"
        android:text="Aceptar" />

    <TextView
        android:id="@+id/et_registro_cuentaExistente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="¿Ya tienes una cuenta?" />

    <EditText
        android:id="@+id/et_sexo_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="sexo"
        android:inputType="textPersonName" />

</LinearLayout>